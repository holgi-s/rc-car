<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.holgis.rcclient.MainActivityUDP">

    <fragment android:name="ca.frozen.rpicameraviewer.activities.VideoFragment"
        android:id="@+id/headlines_fragment"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="256dp" />

    <com.erz.joysticklibrary.JoyStick
        android:id="@+id/joyStickLeft"
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        app:padColor="#50808080"
        app:buttonColor="#50ff0000"
        app:percentage="25" />

    <com.erz.joysticklibrary.JoyStick
        android:id="@+id/joyStickRight"
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:padColor="#50808080"
        app:buttonColor="#50ff0000"
        app:percentage="25" />

    <CheckBox
        android:id="@+id/ledLeft"
        android:layoutDirection="rtl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED"
        android:layout_above="@+id/joyStickLeft"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/ledRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED"
        android:textAlignment="viewEnd"
        android:layout_above="@+id/joyStickRight"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
